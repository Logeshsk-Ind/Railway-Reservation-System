{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "gcc: build & run",
            "command": "gcc",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\rly.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "detail": "Run: Ctrl+Shift+P → Tasks: Run Task → gcc: build & run"
        },
        {
            "label": "Clean & Build",
            "type": "shell",
            "command": "del rly.exe & gcc ${file} -o rly.exe",
            "group": "build"
        }
    ]
}
